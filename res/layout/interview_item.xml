<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterviewrActivity"
    android:background="#522c68"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" >

    <RelativeLayout
        android:id="@+id/top_part"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
        
        <TextView
	        android:id="@+id/interview_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textIsSelectable="false" 
	        android:textColor="#ffffff" />
	    <TextView
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textIsSelectable="false"
	        android:textColor="#ffffff"
	        android:layout_below="@+id/interview_time" />
    
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/bottom_part"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/top_part"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" >
	    
		<ImageView
	        android:id="@+id/picture"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:contentDescription="@string/interviewer_picture"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true" />		
		<TextView
	        android:id="@+id/about_me"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textIsSelectable="false"
	        android:textColor="#ffffff"
	        android:layout_toRightOf="@+id/picture" />
		
	</RelativeLayout>
    
</RelativeLayout>